@using ExpenseManagement.DataAccess.Models;
@model List<Expense>;
@{
    

    <style>
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}

tr:nth-child(even) {
  background-color: rgba(150, 212, 212, 0.4);
}

th:nth-child(even),td:nth-child(even) {
  background-color: rgba(150, 212, 212, 0.4);
}
</style>
    
    <h1>YOUR Expenses</h1>
        <form method="get" action="/Expense/Search">
<p>
<input type="search" placeholder="Enter expense name" value="@ViewData["Getexpensedetails"]" name="searching" style="width:500px;" />
<input type="submit" value ="Search" class="btn btn-primary"/>


</p>

</form>
    @if (Model != null)
    {
        <table style="width:100%">
            <tr>
                <th>Expense Name</th>
                <th>Expense Amount</th>
                <th>Expense Date</th>

            </tr>
            @foreach (Expense expense in Model)
            {
                <tr>
                    <td>
                        @expense.ExpenseName
                    </td>

                    <td>
                        @expense.ExpenseAmount
                    </td>
                    <td>
                        @expense.ExpenseDate
                    </td>


                </tr>
            }


  
  
   
      
  


  
  
  
  </table>
    
     }
            <form action="/Client/Income">

           <div class="field btn">
              
                   
                     <input type="submit" value="Back">
                  </div>
          </form>
    
    

}









